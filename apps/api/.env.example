# Server Configuration
PORT=3001
NODE_ENV=development

# RPC Providers - Backend API
# Get your Alchemy API key from https://www.alchemy.com/
# These URLs are for the backend API to make RPC calls
ALCHEMY_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
ALCHEMY_ARB_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
ALCHEMY_AVAX_RPC_URL=https://avax-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here

# Get your Infura credentials from https://infura.io/ (fallback provider)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting
RPC_RATE_LIMIT_MAX=100
RPC_RATE_LIMIT_WINDOW=60000

# Cache TTL (in seconds)
CACHE_TTL_BALANCE=30
CACHE_TTL_METADATA=3600

# Database (Supabase)
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Logging
LOG_LEVEL=info