{
  "version": 2,
  "buildCommand": "npm run build:deps && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "apps/web/src/app/api/*/route.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/health",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}